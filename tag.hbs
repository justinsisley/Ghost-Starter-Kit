{{!< default}}
{{! The tag above means - insert everything in this file into the {body} of the default.hbs template }}

{{! If we have a tag cover, display that - else blog cover - else nothing }}
<header class="{{#if tag.feature_image}}has-cover" style="background-image: url({{tag.feature_image}}){{else}}{{#if @blog.cover_image}}" style="background-image: url({{@blog.cover_image}}){{else}}no-cover{{/if}}{{/if}}">
    <nav>
        <a href="{{@blog.url}}">Home</a>
        <a href="{{@blog.url}}/tag/{{tag.slug}}/rss/">{{tag.name}}</a>
    </nav>

    <div>
        <h1>{{tag.name}}</h1>
        <h2>
            {{#if tag.description}}
                {{tag.description}}
            {{else}}
                A {{pagination.total}}-post collection
            {{/if}}
        </h2>
    </div>
</header>

{{! The main content area on the homepage }}
<main>
    {{! The tag below includes the post loop - partials/loop.hbs }}
    {{> "loop"}}
</main>
